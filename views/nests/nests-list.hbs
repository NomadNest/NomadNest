<h1>This is a list of all nests</h1>

{{#each nests}}
<section>
    {{!-- INSERT INFO OF picture --}}
    <h4>{{this.title}}</h4>
    <p>
        {{this.location}}
        {{this.price}}
    </p>

    <a href="/nests/{{this._id}}">More details</a>
    <a href="/nests/{{this._id}}/edit">edit</a>

    <form method="POST" action="/nests/{{_id}}/delete">
        <button>Delete</button>
    </form>

</section>
{{/each}}

