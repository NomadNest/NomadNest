<div class="nest-style">
    <h4 class="nest-detail-headline">{{nest.title}}</h4>

    <div class=class="container text-center">
        <div class="row align-items-start">
            <div class="col-10">
                <p class="nest-location-styling">{{nest.location}}</p>
            </div>

            <div class="col-1">
                {{#if isOwner}}
                <button type="button" class="btn btn-light">
                    <a href="/nests/{{nest._id}}/edit">edit</a>
                </button>
            </div>
            <div class="col-1">
                <form method="POST" action="/nests/{{nest._id}}/delete">
                    <button type="submit" class="btn btn-light">delete</button>
                </form>
                {{/if}}
            </div>

        </div>
    </div>

    <img src="{{nest.imageUrl}}" class="card-img-top" alt="{{nest.title}}">

    <div class="container quote-styling">
        <div class="row">
            <div class="col-2 align-self-end text-end">
                <img class="quote-icon"
                    src="https://res.cloudinary.com/dzkmmidp3/image/upload/v1686810283/icon-quote_vsvcjb.png"
                    alt="Logo">
            </div>
            <div class="col-8 quote-text">
                <h5>{{nest.highlight}}</h5>
            </div>
            <div class="row">
                <div class="col-8 text-end quote-styling-author">
                    <p>- Highlight from the host</p>
                </div>
            </div>
        </div>
    </div>

    {{!-- sticky box --}}
    <div class="col-2 sticky-top align-self-end text-end offset-md-10">
        <h5><img class="book-icon"
            src="https://res.cloudinary.com/dzkmmidp3/image/upload/v1686810283/icon-contact_oclbad.png" alt="Logo"> Book now:
        </h5>
        {{nest.email}}
    </div>


    <div class="col-8 section-styling-details section-styling-details-features">
        <h5>Selected features</h5>
        {{#if nest.switches}}
        {{#if nest.switches.airport}}<p>Distance to airport: less than 45min: ✅ </p>{{/if}}
        {{#if nest.switches.accessibility}}<p>Accessible AND equipped for people with diverse mobility needs: ✅</p>
        {{/if}}
        {{#if nest.switches.daylight}}<p>Daylight in main working area: ✅</p>{{/if}}
        {{#if nest.switches.monitor}}<p>Extra monitor available: ✅</p>{{/if}}
        {{#if nest.switches.private}}<p>Extra: private meeting room/s: ✅</p>{{/if}}
        {{#if nest.switches.pet}}<p>Pet friendly: ✅</p>{{/if}}
        {{#if nest.switches.bike}}<p>Bike available: ✅</p>{{/if}}
        {{#if nest.switches.hike}}<p>Hiking nature nearby: ✅</p>{{/if}}
        {{#if nest.switches.coffee}}<p>Coffee shops and restaurants nearby: ✅</p>{{/if}}
        {{#if nest.switches.gym}}<p>Gym available: ✅</p>{{/if}}
        {{#if nest.switches.swimm}}<p>Swimming nearby: ✅</p>{{/if}}

        {{else}}
        <p></p>
        {{/if}}
    </div>

    <hr class="col-8">

    <div class="col-8 section-styling-details styling-description">
        <h5>Description</h5>
        {{nest.description}}
        <br>
        <span>Minimum €{{nest.price}}/night</span>
    </div>

    <hr class="col-8">

    <div class="col-6 section-styling-details">
        <h5>Location</h5>
    </div>
    <div id="map"></div>

<br>
<br>

  <div class=class="container text-center">
    <div class="row justify-content-end">
      <div class="col-2">
        <a href="/nests">Back to all nests!</a>
        <br>
        <br>
        <br>
        <br>
      </div>
    </div>
  </div>

</div>


