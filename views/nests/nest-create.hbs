<h4>Create a new Nest</h4>

<form method="POST" action="/nests/create" enctype="multipart/form-data">

    <label> Title:
        <input type="text" name="title" required="true" />
    </label>

    <label> Location:
        <input type="text" name="location" required="true" />
    </label>

    <label> Price:
        <input type="number" name="price" required="true" />
    </label>

    <label> Picture:
        <input type="file" name="movie-cover-image" class="form-control-file" />
    </label>


    <label> Description:
        {{!-- <input type="text" required="true" /> --}}
        <textarea name="description" cols="30" rows="4"> </textarea>
    </label>

    <button type="submit"> Create </button>

</form>

